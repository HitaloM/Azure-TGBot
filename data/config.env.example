# Telegram Bot Configuration
# Rename this file to config.env to use it

# Telegram Bot Token (required)
# Obtain it from @BotFather on Telegram
BOT_TOKEN=123456789:AABBCCDDEEFFggHHiiJJkkLLmmNNooPPqq

# Azure AI Inference Settings
# Azure API Key (required)
AZURE_API_KEY=your_azure_api_key_here

# Azure AI Inference Endpoint (optional - default value provided)
AZURE_ENDPOINT=https://models.inference.ai.azure.com

# Bing API Key for web search (required)
BING_API_KEY=your_bing_search_api_key_here

# Token limit for truncation (optional - default value: 4000)
TOKEN_TRUNCATE_LIMIT=4000

# Sudoers list - List of user IDs with elevated privileges
SUDOERS=[
    123456789,  # Replace with your Telegram user ID
    987654321   # Add more user IDs as needed
]
